<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextPantalla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:focusable="false"
        android:gravity="end"
        android:hint="0"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textSize="24sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDividir"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operation_button_background"
            android:text="/"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonMultiplicar"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operation_button_background"
            android:text="*"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonRestar"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operation_button_background"
            android:text="-"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/button_background"
            android:backgroundTint="#E91E63"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonIgual"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operation_button_background"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSumar"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operation_button_background"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/operation_button_background"
            android:backgroundTint="#3F51B5"
            android:text="C"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </GridLayout>

</LinearLayout>